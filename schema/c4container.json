{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$ref": "#/definitions/ContainerConfig",
  "definitions": {
    "ContainerConfig": {
      "type": "object",
      "properties": {
        "name": {
          "type": "string",
          "description": "Container name"
        },
        "description": {
          "type": "string",
          "description": "Container description"
        },
        "technology": {
          "type": "string",
          "description": "Technology stack"
        },
        "tags": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "description": "Container tags"
        },
        "properties": {
          "type": "object",
          "additionalProperties": {
            "type": "string"
          },
          "description": "Custom properties"
        },
        "groups": {
          "$ref": "#/definitions/GroupHierarchy",
          "description": "Group hierarchy"
        },
        "source": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "description": "Source file patterns"
        },
        "external": {
          "type": "object",
          "additionalProperties": {
            "$ref": "#/definitions/ExternalElement"
          },
          "description": "External components"
        }
      },
      "required": [
        "name",
        "description",
        "source"
      ],
      "additionalProperties": false,
      "description": "Container configuration"
    },
    "GroupHierarchy": {
      "type": "object",
      "additionalProperties": {
        "$ref": "#/definitions/GroupHierarchy"
      },
      "description": "Hierarchical group structure"
    },
    "ExternalElement": {
      "type": "object",
      "properties": {
        "type": {
          "$ref": "#/definitions/C4ElementType",
          "description": "Element type"
        },
        "description": {
          "type": "string",
          "description": "Element description"
        },
        "technology": {
          "type": "string",
          "description": "Technology used"
        },
        "tags": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "description": "Element tags"
        }
      },
      "required": [
        "type"
      ],
      "additionalProperties": false,
      "description": "External element definition"
    },
    "C4ElementType": {
      "type": "string",
      "enum": [
        "component",
        "container",
        "softwareSystem",
        "person"
      ],
      "description": "C4 model element type"
    }
  }
}