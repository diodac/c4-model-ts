{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "C4 Container Configuration",
  "description": "Configuration schema for C4 Model Generator",
  "type": "object",
  "required": ["name", "description", "source"],
  "properties": {
    "name": {
      "type": "string",
      "description": "Name of the container/service",
      "minLength": 1
    },
    "description": {
      "type": "string",
      "description": "Description of the container's purpose",
      "minLength": 1
    },
    "technology": {
      "type": "string",
      "description": "Optional primary technology stack used in the container",
      "minLength": 1
    },
    "tags": {
      "type": "array",
      "description": "Optional list of tags for the container",
      "items": {
        "type": "string",
        "minLength": 1
      },
      "uniqueItems": true
    },
    "properties": {
      "type": "object",
      "description": "Optional custom name/value properties",
      "additionalProperties": {
        "type": "string",
        "description": "Property value"
      }
    },
    "groups": {
      "type": "object",
      "description": "Optional hierarchical structure of groups",
      "additionalProperties": {
        "type": "object",
        "description": "Nested groups",
        "additionalProperties": {
          "$ref": "#/properties/groups/additionalProperties"
        }
      }
    },
    "source": {
      "type": "array",
      "description": "Array of glob patterns for source files",
      "items": {
        "type": "string",
        "description": "Glob pattern for including/excluding files"
      },
      "minItems": 1
    }
  },
  "additionalProperties": false
}
