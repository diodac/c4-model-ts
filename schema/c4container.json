{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$ref": "#/definitions/ContainerConfig",
  "definitions": {
    "ContainerConfig": {
      "type": "object",
      "properties": {
        "name": {
          "type": "string",
          "description": "Container name"
        },
        "description": {
          "type": "string",
          "description": "Container description"
        },
        "technology": {
          "type": "string",
          "description": "Technology stack"
        },
        "tags": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "description": "Container tags"
        },
        "source": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "description": "Source file patterns"
        },
        "properties": {
          "type": "object",
          "additionalProperties": {
            "type": "string"
          },
          "description": "Container properties"
        },
        "groups": {
          "$ref": "#/definitions/Groups",
          "description": "Component groups"
        },
        "external": {
          "type": "object",
          "additionalProperties": {
            "$ref": "#/definitions/ExternalElement"
          },
          "description": "External components"
        },
        "relationships": {
          "type": "array",
          "items": {
            "$ref": "#/definitions/ContainerRelation"
          },
          "description": "Container-level relationships"
        }
      },
      "required": [
        "name",
        "description",
        "source"
      ],
      "additionalProperties": false,
      "description": "Container configuration from c4container.json"
    },
    "Groups": {
      "type": "object",
      "additionalProperties": {
        "anyOf": [
          {
            "$ref": "#/definitions/Groups"
          },
          {
            "type": "object",
            "additionalProperties": {
              "not": {}
            }
          }
        ]
      },
      "description": "Recursive group structure"
    },
    "ExternalElement": {
      "type": "object",
      "properties": {
        "name": {
          "type": "string",
          "description": "Element name"
        },
        "description": {
          "type": "string",
          "description": "Element description"
        },
        "technology": {
          "type": "string",
          "description": "Technology stack"
        },
        "tags": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "description": "Element tags"
        },
        "type": {
          "type": "string",
          "description": "Element type (container, system, etc.)"
        }
      },
      "required": [
        "name",
        "description"
      ],
      "additionalProperties": false,
      "description": "External element configuration"
    },
    "ContainerRelation": {
      "type": "object",
      "properties": {
        "target": {
          "type": "string",
          "description": "Target container or system name"
        },
        "description": {
          "type": "string",
          "description": "Relation description"
        },
        "technology": {
          "type": "string",
          "description": "Technology used for the relation"
        },
        "tags": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "description": "Relation tags"
        },
        "url": {
          "type": "string",
          "description": "URL with documentation"
        },
        "properties": {
          "type": "object",
          "additionalProperties": {
            "type": "string"
          },
          "description": "Custom properties"
        }
      },
      "required": [
        "description",
        "target"
      ],
      "additionalProperties": false,
      "description": "Container-level relationship configuration"
    }
  }
}