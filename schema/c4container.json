{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$ref": "#/definitions/ContainerConfig",
  "definitions": {
    "ContainerConfig": {
      "type": "object",
      "properties": {
        "name": {
          "type": "string",
          "description": "Container name"
        },
        "description": {
          "type": "string",
          "description": "Container description"
        },
        "technology": {
          "type": "string",
          "description": "Technology stack"
        },
        "tags": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "description": "Container tags"
        },
        "source": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "description": "Source file patterns"
        },
        "properties": {
          "type": "object",
          "additionalProperties": {
            "type": "string"
          },
          "description": "Container properties"
        },
        "external": {
          "type": "object",
          "additionalProperties": {
            "$ref": "#/definitions/ExternalElement"
          },
          "description": "External components"
        }
      },
      "required": [
        "name",
        "description",
        "source"
      ],
      "additionalProperties": false,
      "description": "Container configuration from c4container.json"
    },
    "ExternalElement": {
      "type": "object",
      "properties": {
        "name": {
          "type": "string",
          "description": "Element name"
        },
        "description": {
          "type": "string",
          "description": "Element description"
        },
        "technology": {
          "type": "string",
          "description": "Technology stack"
        },
        "tags": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "description": "Element tags"
        }
      },
      "required": [
        "name",
        "description"
      ],
      "additionalProperties": false,
      "description": "External element configuration"
    }
  }
}